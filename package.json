{
  "name": "ln-sample-app",
  "version": "0.1.0",
  "description": "A sample Lightning application",
  "main": "build/index.js",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -n server,client 'npm run dev:server' 'npm run dev:client'",
    "dev:client": "webpack-dev-server --config ./client/webpack.config.js --display=minimal",
    "dev:server": "nodemon",
    "build": "rimraf build/ && npm run build:server && npm run build:client",
    "build:client": "cross-env NODE_ENV=production webpack --config client/webpack.config.js",
    "build:server": "tsc --project server/tsconfig.json",
    "start": "cross-env NODE_ENV=production node build/index.js",
    "heroku-postbuild": "yarn build"
  },
  "dependencies": {
    "@radar/lnrpc": "0.6.0-beta.0",
    "body-parser": "1.19.0",
    "bootstrap": "4.3.1",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "css-loader": "2.1.1",
    "dotenv": "7.0.0",
    "dotenv-webpack": "1.7.0",
    "express": "4.16.4",
    "express-ws": "4.0.0",
    "file-loader": "3.0.1",
    "html-webpack-plugin": "3.2.0",
    "mini-css-extract-plugin": "0.7.0",
    "node-sass": "4.12.0",
    "qrcode.react": "0.9.3",
    "query-string": "6.5.0",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-hot-loader": "4.8.4",
    "reactstrap": "8.0.0",
    "sass-loader": "7.1.0",
    "style-loader": "0.23.1",
    "ts-loader": "6.0.0",
    "typescript": "3.4.5",
    "webpack": "4.30.0",
    "webpack-cli": "3.3.2",
    "webpack-dev-server": "3.3.1"
  },
  "devDependencies": {
    "@types/compression": "0.0.36",
    "@types/cors": "2.8.5",
    "@types/dotenv": "6.1.1",
    "@types/express": "4.16.1",
    "@types/express-ws": "3.0.0",
    "@types/qrcode.react": "0.8.2",
    "@types/react": "16.8.19",
    "@types/react-dom": "16.8.4",
    "@types/reactstrap": "8.0.1",
    "concurrently": "4.1.0",
    "cross-env": "5.2.0",
    "nodemon": "1.19.0",
    "rimraf": "2.6.3",
    "ts-node": "8.1.0"
  }
}
